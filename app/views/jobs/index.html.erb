<section class="content-header">
    <h1>
        Print    Jobs
        <small>ChApp</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Print   Jobs</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">

          <div class="box">
                  <div class="box-header">
                      <h3 class="box-title">Print  Jobs</h3>

                      <div class="pull-right">
          						    <%= link_to "Add A New Print  Job", new_print_job_path, :class => 'btn btn-flat btn-primary' %>
          					  </div>
                  </div><!-- /.box-header -->
                  <div class="box-body no-padding">


                    <table class="table   table-striped">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Client</th>
                          <th>Description</th>
                          <th>Quantity</th>
                          <th>Date In</th>
                          <th>Due Date</th>
                          <th>Completed</th>
                          <th>Complete (%)</th>
                          <th>Expected In (hrs)</th>
                          <th>Status</th>
                          <th>Comment</th>
                          <th colspan="3"></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @jobs.each do |job| %>
                          <tr>

                            <td><%= link_to job.name, job %></td>
                            <td><%= job.client.name %></td>
                            <td><%= job.description %></td>
                            <td><%= job.quantity %></td>
                            <td><%= job.datein %></td>
                            <td><%= job.duedate %></td>
                            
                            <td><%= number_with_precision(@sprintjobs, :precision => 2, :delimiter => ',') %></td>

                            <td><%= job.completed %></td>
                            <td><%= job.expectedin %></td>

                            <td><%= job.status %></td>
                            <td><%= job.comment %></td>
                            <td><%= link_to 'Show', job %></td>
                            <td><%= link_to 'Edit', edit_job_path(job) %></td>
                            <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div><!-- /.box-body -->
              </div><!-- /.box -->
        </div>
    </div>
</section>


<br>

