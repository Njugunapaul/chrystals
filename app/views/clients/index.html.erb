<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Clients
        <small>ChApp</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Clients</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">

          <div class="box">
                  <div class="box-header">
                      <h3 class="box-title">Client Companies</h3>

                      <div class="pull-right">
          						    <%= link_to "Add A New client", new_client_path, :class => 'btn btn-flat btn-primary' %>
          					  </div>
                  </div><!-- /.box-header -->
                  <div class="box-body no-padding">


                      <table class="table table-stripped">
                        <tr>
            							<td><h4>Name</h4></td>
            							<td><h4>Email</h4></td>
            							<td><h4>Contact Person</h4></td>
            							<td><h4> phone</h4></td>

            							<td></td>
            						</tr>

            						<% @clients.each do |client| %>
            							<tr>
            								<td> <%= link_to client.name, client %> </td>
                            <td><%= client.description %></td>
                            <td><%= client.contactperson %></td>
                            <td><%= client.phone %></td>
                            <td><%= client.officeline %></td>
                            <td><%= client.email %></td>
            								<td>
                              <%= link_to 'View client', client %>
            									<%= link_to 'Edit', edit_client_path(client) %>
            									<%= link_to 'Delete', client, method: :delete, data: { confirm: 'Are you sure?' } %>
            								</td>
            							</tr>
            						<% end %>
            					</table>
                  </div><!-- /.box-body -->
              </div><!-- /.box -->
        </div>
    </div>
</section>
